{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2016",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "include": ["App.tsx", "src/**/*"],
  "exclude": ["node_modules"]
}
